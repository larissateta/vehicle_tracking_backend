{
    "openapi": "3.0.0",
    "info": {
        "title": "Vehicle Tracking",
        "version": "1.0.0",
        "description": "API for vehicle Tracking"
    },
    "host": "localhost:4000",
    "basePath": "/api",
    "schemes": ["http", "https"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "tags": [
      {
        "name": "Admin",
        "description": "Admin operations"
      },
      {
        "name": "Car",
        "description": "Car operations"
      },
      {
        "name": "Owners",
        "description": "Owner operations"
      }
    ],
    "paths": {
        "api/register": {
            "post": {
                "summary": "Sign up in vehicle Tracking System",
                "description": "Endpoint for user registration",
                "tags": ["Admin"],
                "parameters": [
                    {
                        "name": "authorization",
                        "in": "header",
                        "type":"string"
                    }
                ],
                "requestBody" :{
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "phone": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "NID": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": ["name", "phone", "email", "NID", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "200" : {
                        "description": "Registered Successfully"
                    },
                    "400": {
                        "description": "Failed to Register a user"
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        }, 
        "/api/login" : {
            "post": {
                "summary" : "Login Vehicle Tracking",
                "description": "Endpoint for user login",
                "tags":["Admin"],
                "parameters":[
                    {
                        "name": "authorization",
                        "in": "header",
                        "type": "string"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content" :{
                        "application/json": {
                            "schema": {
                                "type":"object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": ["email", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Logged in Successfully"
                    }, 
                    "400": {
                        "description": "Failed to Log in"
                    }
                }
            }
           
        },
        "/api/owner/register": {
            "post": {
                "summary": "Register a vehicle owner",
                "description": "Endpoint for vehicle owner registration",
                "tags": ["Owners"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "name": {
                                        "type":"string"
                                    },
                                    "NID": {
                                        "type":"string"
                                    },
                                    "phone": {
                                        "type": "string"
                                    },
                                    "address": {
                                        "type": "string"
                                    }
                                },
                                "required": ["name", "NID", "phone", "address"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Registered vehicle owner successfully"
                    },
                    "400": {
                        "description": "Failed to register owner"
                    }, 
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "api/owner": {
            "get": {
                "summary": "Get list of owners",
                "tags":["Owners"],
                "responses": {
                    "200": "A list of owners",
                    "content":{
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }

                }
               
            }
        },
        "/cars/register": {
            "post": {
                "summary": "Register a vehicle",
                "description": "Endpoint for vehicle registration",
                "tags":["Car"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "chasisNumber": {
                                        "type":"string"
                                    },
                                    "manufacturer": {
                                        "type":"string"
                                    },
                                    "manufactureYear": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "string"
                                    },
                                    "plateNumber": {
                                        "type": "string"
                                    },
                                    "model": {
                                        "type": "string"
                                    },"owner": {
                                        "type": "string"
                                    }
                                },
                                "required": ["name", "NID", "phone", "address"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Registered vehicle owner successfully"
                    },
                    "400": {
                        "description": "Failed to register owner"
                    }, 
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/cars": {
            "get": {
                "summary": "Get list of owners",
                "tags":["Car"],
                "responses": {
                    "200": "A list of owners",
                    "content":{
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }

                }
               
            }
        },
        "/api/cars/:carId": {
            "delete": {
                "summary": "Delete Car",
                "tags": ["Car"],
                "responses":{
                    "400":{
                        "description":"Failed to delete car"
                    },
                    "200":{
                        "description": "Car deleted successfully"
                    }
                }
            }
        },
        "/api/owner/:ownerId": {
            "delete":{
                "summary": "Delete owner",
                "tags":["Owners"],
                "responses":{
                    "400":{
                        "description":"Failed to delete owner"
                    },
                    "200":{
                        "description": "Owner deleted successfully"
                    }
                }
            }
        }
    }
}